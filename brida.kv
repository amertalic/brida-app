<GameplayWindow>:
    name: 'game_play'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10
        GridLayout: #1
            padding: 2.5
            spacing: 0
            cols:1
            rows:3
            size: root.width, root.height
            Button:
                text: 'Exit game'
                size: 200,20
                size_hint: root.width, None
                #on_press: # reset everythong to default
                on_release:
                    app.root.current = 'welcome_screen'
                    root.manager.transition.direction ='right'
            GridLayout: #1
                padding: 2.5
                spacing: 0
                cols:2
                size: root.width, root.height
                Label: #1
                    id: label_points
                    text: ''
                    bold: True
                    font_size: 12
                    background_color: ( 0 , 0 , 0 ,1 )
                    valign: 'middle'
                    halign: 'center'
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
            GridLayout: #1
                padding: 2.5
                spacing: 5
                cols:2
                size: root.width, root.height
                Label: #1
                    id: label_1
                    text: ''
                    bold: True
                    font_size: 12
                    background_color: ( 0 , 0 , 0 ,1 )
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                Label: #1
                    id: label_2
                    text: ''
                    bold: True
                    font_size: 12
                    background_color: ( 0 , 0 , 0 ,1 )
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos


        GridLayout:#2
            padding: 5
            spacing: 2.5
            cols:1 #CHANGE TO 2 IF LINING LEFT RIGHT
            #sets size Labels, Buttons etc. to fill window
            size: root.width, root.height
            Label:
                id: label_3
                text: 'word'
                bold: True

                background_color: ( 0 , 0 , 0 ,1 )
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos


            Label:
                text: str(round(root.number))
                font_size: 12
                bold: True
                background_color: ( 0 , 0 , 0 ,1 )
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Button:
                text: 'Stop timer'
                on_press: root.stop_timer()
                on_press: root.number = root.sec60

            Button:
                text: 'test button'
                #on_press: root.grab_player_list()

                #on_press: root.call_check_winner()

        GridLayout:#3
            padding: 2.5
            spacing: 2.5
            cols:1
            rows:2
            GridLayout:#3
                padding: 2.5
                spacing: 2.5
                cols:1
                rows:2
                Button:
                    id: but_3
                    text: 'START ROUND\n(dsiplay Players & points)'
                    bold: True
                    font_size: 12
                    halign: 'center'
                    on_press: root.st_round()
                    on_press: root.number = root.sec60
                    on_press: root.stop_timer()
                Button:
                    id: but_3
                    text: 'PLAY\n(get wor & start timer)'
                    font_size: 12
                    bold: True
                    halign: 'center'
                    on_press: root.st_play_round()

            GridLayout:#3
                padding: 2.5
                spacing: 2.5
                cols:3
                rows:1

                Button:
                    id: but_1
                    text: 'Joker'
                    font_size: 12
                    bold: True
                    halign: 'center'
                    on_press: root.joker()
                    on_release: root.joker_button()

                Button:
                    id: but_2
                    text: 'NEXT\nWORD'
                    font_size: 12
                    bold: True
                    halign: 'center'
                    on_press: root.next_word()

                Button:
                    id: but_4
                    text: 'CORRECT'
                    font_size: 12
                    bold: True
                    halign: 'center'
                    on_press: root.correct()
